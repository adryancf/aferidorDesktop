{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictBindCallApply": true,
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "src/index.ts",
    "tests/jest/**/*"
  ]
}
